<div class = "form-wrapper">

  <h3>部屋予約！！</h3>
  
  <%= form_with(model: @reservation) do |f| %>
    <table>
      <tr>
        <th><%= f.label :start_date ,"開始日" %></th>
        <td><%= f.text_field :start_date, class:"except_memo" %></td>
      </tr>
      <tr>
        <th><%= f.label :end_date ,"終了日	" %></th>
        <td><%= f.text_area :end_date, class:"except_memo" %></td>
      </tr>
      <tr>
        <th><%= f.label :person_num ,"人数" %></th>
        <td><%= f.number_field :person_num, class:"except_memo" %></td>
      </tr>
      <tr>
        <th><%= f.label :total_price ,"合計" %></th>
        <td><%= f.text_field :total_price %></td>
      </tr>
    </table>
    <div>
      <p class="submit_button"><%= f.submit "部屋を新規登録する"%></p>
      <p><%= link_to "一覧に戻る", :reservations %></p>
    </div>
  <% end %>
  
</div>
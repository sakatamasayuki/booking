<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>
<div class ="index-wrapper">
  <h3>部屋一覧</h3>

<table>
<thead>
  <tr>
    <th>ユーザーid</th>
    <th>ユーザー名</th>
    <th>ユーザー紹介</th>
    <th>ユーザー画像</th>
    <th>email</th>
    <th>作成日時</th>
    <th>更新日時</th>
    <th>確認</th>
    <th>編集</th>
    <th>削除</th>
  </tr>
</thead>
  
<tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.user_name %></td>
      <td><%= user.user_intro %></td>
      <td><%= user.user_pic %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at %></td>
      <td><%= user.updated_at %></td>
      <td>
        <%= link_to "確認", user %>
      </td>
      <td>
        <%= link_to "編集", [:edit, user] %>
      </td>
      <td>
        <%= link_to "削除", user , data: {turbo_method: :delete, turbo_confirm: "本当に削除しますか？" } %>
      </td>
    </tr>
  <% end %>
</tbody>
</table>

<p><%= link_to "新規登録", :new_user_registration %></p>
<p><%= link_to "トップへ", :root %></p>
<p><%= link_to "ユーザーログアウト", :destroy_user_session, :method => :delete %></p>

</div>
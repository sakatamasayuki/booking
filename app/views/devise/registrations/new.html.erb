<h2>Sign up</h2>

  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user',local: true do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

<table>
    <tr>
      <th><%= f.label :user_name ,"ユーザー名" %></th>
      <td><%= f.text_field :user_name, class:"except_memo" %></td>
    </tr>
    <tr>
      <th><%= f.label :user_intro ,"一言紹介" %></th>
      <td><%= f.text_area :user_intro, class:"except_memo" %></td>
    </tr>
    <tr>
      <th><%= f.label :user_pic ,"ユーザー画像" %></th>
      <td><%= f.text_area :user_pic, class:"except_memo" %></td>
    </tr>
    <tr>
      <th><%= f.label :email , "メールアドレス"%></th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr>
      <th><%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %></th>
      <td><%= f.password_field :password, autocomplete: "new-password" %></td>
    </tr>
    <tr>
      <th><%= f.label :password_confirmation, "パスワード確認" %><br />
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
    </tr>

  <div class="actions">
    <%= f.submit "ユーザー登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
